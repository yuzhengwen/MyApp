<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topEditText"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:layout_marginTop="20dp"
        android:text="Enter Top Text"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomEditText"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:layout_below="@id/topEditText"
        android:layout_marginTop="10dp"
        android:text="Enter Bottom Text"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Create MEME"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bottomEditText"
        android:layout_marginTop="10dp"/>

</RelativeLayout>